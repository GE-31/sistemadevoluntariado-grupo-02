<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Sistema de Voluntariado</display-name>

    <!-- ========================= FILTRO DE AUTENTICACIÓN ========================= -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.sistemadevoluntariado.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- ========================= CONFIGURACIÓN DE SESIÓN ========================= -->
    <session-config>
        <session-timeout>20</session-timeout>
    </session-config>

    <!-- Página de inicio predeterminada -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- AuthServlet - Login -->
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>com.sistemadevoluntariado.controller.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- DashboardServlet -->
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.sistemadevoluntariado.controller.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <!-- LogoutServlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.sistemadevoluntariado.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- SessionRenewServlet - Renovar sesión vía AJAX -->
    <servlet>
        <servlet-name>SessionRenewServlet</servlet-name>
        <servlet-class>com.sistemadevoluntariado.controller.SessionRenewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionRenewServlet</servlet-name>
        <url-pattern>/api/session/renew</url-pattern>
    </servlet-mapping>

</web-app>